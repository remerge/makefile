#!/usr/bin/env aptfile

# trigger an apt-get update
update

package "git"
package "glow" "https://github.com/charmbracelet/glow/releases/download/v1.4.1/glow_1.4.1_linux_amd64.deb"
package "grep"
package "make"
package "moreutils"
package "pastel" "https://github.com/sharkdp/pastel/releases/download/v0.8.1/pastel_0.8.1_amd64.deb"
package "sed"
package "shellcheck"

# package "shfmt"
curl -fsSLo /usr/local/bin/shfmt https://github.com/mvdan/sh/releases/download/v3.4.3/shfmt_v3.4.3_linux_amd64
chmod +x /usr/local/bin/shfmt

# package "prettier"
package "npm"
npm install -g prettier

echo "All packages installed!"

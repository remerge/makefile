#!/usr/bin/env aptfile

# trigger an apt-get update
update

package "git"
package "glow" "https://github.com/charmbracelet/glow/releases/download/v1.4.1/glow_1.4.1_linux_amd64.deb"
package "grep"
package "make"
package "moreutils"
package "pastel" "https://github.com/sharkdp/pastel/releases/download/v0.8.1/pastel_0.8.1_amd64.deb"
package "sed"
package "shellcheck"
package "shfmt" "http://ftp.de.debian.org/debian/pool/main/s/shfmt/shfmt_3.4.3-1_amd64.deb"

# package "prettier"
package "npm"
npm install -g prettier

echo "All packages installed!"
